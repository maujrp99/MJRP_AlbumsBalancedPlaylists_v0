rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================================
    // ARTIFACTS (User Data - Scoped)
    // =========================================================================
    match /artifacts/{appId}/users/{userId}/curator/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /artifacts/{appId}/users/{userId}/inventory/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // =========================================================================
    // USER-SCOPED SERIES & ALBUMS (V3 Architecture)
    // =========================================================================
    match /users/{userId}/series/{seriesId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/series/{seriesId}/albums/{albumId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/series/{seriesId}/playlists/{playlistId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Sprint 20: User Rankings
    match /users/{userId}/albumRankings/{albumId} {
      // DEBUG: Allow 'anonymous-user' or Authenticated User
      // Production Requirement: Change to `request.auth != null` before launch
      allow read, write: if true; 
    }
    
    // =========================================================================
    // LEGACY ALBUMS (Root Collection)
    // =========================================================================
    // Necess√°rio porque o AlbumsStore ainda grava na raiz '/albums'
    match /albums/{albumId} {
      allow read, write: if request.auth != null;
    }

    // =========================================================================
    // SPOTIFY ENRICHMENT (Global Public Cache)
    // =========================================================================
    match /spotify_enrichment/{albumKey} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; 
    }
    
  }
}
